<% if @link %>
  <h1> Edit Link: </h1>

  <% if @link.errors.any? %>
    <div id='error_explanation'>
      <h2><%= pluralize(@link.errors.count, 'error') %> prohibited this link from being saved:</h2>

      <ul>
        <% @link.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_tag '/links/' + @link.id.to_s, method: 'patch' do %>
    <div  class="form-group">
      <%= label_tag :slug %>
      <%= text_field_tag :slug, @link.slug, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag :target_url %>
      <%= text_field_tag :target_url, @link.target_url, class: 'form-control' %>
    </div>
    <div>
      <%= submit_tag 'Update URL', class: "btn btn-default" %>
    </div>
  <% end %>
<% end %>